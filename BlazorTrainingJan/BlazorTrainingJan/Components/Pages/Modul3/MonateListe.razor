@page "/monat"
<h3>MonateListe</h3>
<div class="container">
    <div class="row">
        <div class="col-12 col-md-6">
            
            <h1>@Monat</h1>
        </div>
        <div class="col-12 col-md-6">
           <ul class="list-group">
               <li class="list-group-item active">Monate</li>
               @for (int i = 0; i < 12; i++)
                {
                    var m = i;
                    <li class='list-group-item list-group-item-action @(selectedMonat==m?"list-group-item-primary":"")'
                        @onclick="()=>Select(m)">
                        @DateTime.Now.AddMonths(i).ToString("MMMM")
                    </li>
                }
           </ul>
           
       </div>
    </div>

</div>

@code {
    string Monat;
    int selectedMonat=-1;
    void Select(int m)
    {
        Monat = DateTime.Now.AddMonths(m).ToString("MMMM");
        selectedMonat = m;
    }
}
